			// third row function
			function thirdRow(){
			debugger
				var sum;
				var sum1;
					var x1 = Number(document.getElementById("r3c1").value);
					var x2 = Number(document.getElementById("r3c2").value);
					var x3 = Number(document.getElementById("r3c3").value);
					var x4 = Number(document.getElementById("r3c4").value);
					
					if(x1!==0 && x2!==0 && x3!==0 && x4!==0){
						if(x3==x4){
							sum = x3 + x4;
							document.getElementById("r3c4").value = sum;
							document.getElementById("r3c3").value = x2;
							document.getElementById("r3c2").value = x1;
							document.getElementById("r3c1").value = " ";
