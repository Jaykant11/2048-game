		function buttonPress(event){
			debugger
			var keys = event.key;
					
			if(keys == "ArrowUp"){
				upDirection();
			}else if(keys == "ArrowDown"){
				downDirection();
			}else if(keys == "ArrowLeft"){
				leftDirection();
			}else if(keys == "ArrowRight"){
				rightDirection();
			}
		}
		
		
