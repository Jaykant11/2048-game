			//  first column function
			function firstColumn(){
			debugger
				var sum;
				var sum1;
					var x4 = Number(document.getElementById("r4c1").value);
					var x3 = Number(document.getElementById("r3c1").value);
					var x2 = Number(document.getElementById("r2c1").value);
					var x1 = Number(document.getElementById("r1c1").value);
					
						if(x1!==0 && x2!==0 && x3!==0 && x4!==0){
							if(x1==x2){
								sum = x1 + x2;
								document.getElementById("r1c1").value = sum;
								document.getElementById("r2c1").value = x3;
								document.getElementById("r3c1").value = x4;
								document.getElementById("r4c1").value = " ";
							}else if(x2==x3){
								sum = x2 + x3;
								document.getElementById("r2c1").value = sum;
								document.getElementById("r3c1").value = x4;
								document.getElementById("r4c1").value = " ";
							}else if(x3==x4){
								sum = x3 + x4;
								document.getElementById("r3c1").value = sum;
								document.getElementById("r4c1").value = " ";
							}else if(x1==x2 && x3==x4){
								sum = x1 + x2;
								sum1 = x3 + x4;
								document.getElementById("r1c1").value =  sum;
								document.getElementById("r2c1").value = sum1;
								document.getElementById("r3c1").value = " ";
								document.getElementById("r4c1").value = " ";
							}
						}else if(x1!==0 && x2!==0 && x3!==0 && x4==0){
							if(x1==x2){
								sum = x1 + x2;
								document.getElementById("r1c1").value =  sum;
								document.getElementById("r2c1").value = x3;
								document.getElementById("r3c1").valu2 = " ";
							}else if(x2==x3){
								sum = x2 + x3;
								document.getElementById("r2c1").value =  sum;
								document.getElementById("r3c1").valu2 = " ";
							}
						}else if(x1!==0 && x2!==0 && x3==0 && x4!==0){
							if(x1==x2){
								sum = x1 + x2;
								document.getElementById("r1c1").value = sum;
								document.getElementById("r2c1").value = x4;
								document.getElementById("r4c1").value = " ";
							}else if(x2==x4){
								sum = x2 + x4;
								document.getElementById("r2c1").value = sum;
								document.getElementById("r4c1").value = " ";
							}else{
								document.getElementById("r3c1").value = x4;
								document.getElementById("r4c1").value = " ";
							}
						}else if(x1!==0 && x2==0 && x3!==0 && x4!==0){
							if(x1==x3){
								sum = x1 + x3;
								document.getElementById("r1c1").value = sum;
								document.getElementById("r2c1").value = x4;
								document.getElementById("r3c1").value = " ";
								document.getElementById("r4c1").value = " ";
							}else if(x3==x4){
								sum = x3 + x4;
								document.getElementById("r2c1").value = sum;
								document.getElementById("r3c1").value = " ";
								document.getElementById("r4c1").value = " ";
							}else{
								document.getElementById("r2c1").value = x3;
								document.getElementById("r3c1").value = x4;
								document.getElementById("r4c1").value = " ";
								
							}
						}else if(x1==0 && x2!==0 && x3!==0 && x4!==0){
							if(x2==x3){
								sum = x2 + x3;
								document.getElementById("r1c1").value = sum;
								document.getElementById("r2c1").value = x4;
								document.getElementById("r3c1").value = " ";
								document.getElementById("r4c1").value = " ";
							}else if(x3==x4){
								sum = x4 + x3;
								document.getElementById("r1c1").value = x2;
								document.getElementById("r2c1").value = sum;
								document.getElementById("r3c1").value = " ";
								document.getElementById("r4c1").value = " ";
							}else{
								document.getElementById("r1c1").value = x2;
								document.getElementById("r2c1").value = x3;
								document.getElementById("r3c1").valu2 = x4;
								document.getElementById("r4c1").valu2 = " ";
							}
						}else if(x1!==0 && x2!==0 && x3==0 && x4==0){
							if(x1==x2){
								sum = x1 + x2;
								document.getElementById("r1c1").value = sum;
								document.getElementById("r2c1").value = " ";
							}
						}else if(x1!==0 && x2==0 && x3==0 && x4!==0){
							if(x1==x4){
								sum = x1 + x4;
								document.getElementById("r1c1").value = sum;
								document.getElementById("r4c1").value = " ";
							}else{
								document.getElementById("r2c1").value = x4;
								document.getElementById("r4c1").value = " ";
							}
						}else if(x1!==0 && x2==0 && x3!==0 && x4==0){
							if(x1==x3){
								sum = x1+x3;
								document.getElementById("r1c1").value = sum;
								document.getElementById("r3c1").value = " ";
							}else{
								document.getElementById("r2c1").value = x3;
								document.getElementById("r3c1").value = " ";
							}
						}else if(x1==0 && x2==0 && x3!==0 && x4!==0){
							if(x3==x4){
								sum = x3 + x4;
								document.getElementById("r1c1").value = sum;
								document.getElementById("r3c1").value = " ";
								document.getElementById("r4c1").value = " ";
							}else{
								document.getElementById("r1c1").value = x3;
								document.getElementById("r2c1").value = x4;
								document.getElementById("r3c1").value = " ";
								document.getElementById("r4c1").value = " ";
							}
						}else if(x1==0 && x2!==0 && x3==0 && x4!==0){
							if(x2==x4){
								sum = x2 + x4;
								document.getElementById("r1c1").value = sum;
								document.getElementById("r2c1").value = " ";
								document.getElementById("r4c1").value = " ";
							}else{
								document.getElementById("r1c1").value = x2;
								document.getElementById("r2c1").value = x4;
								document.getElementById("r4c1").value = " ";
							}
						}else if(x1==0 && x2!==0 && x3!==0 && x4==0){
							if(x2==x3){
								sum = x2 + x3;
								document.getElementById("r1c1").value = sum;
								document.getElementById("r2c1").value = " ";
								document.getElementById("r3c1").value = " ";
							}else{
								document.getElementById("r1c1").value = x2;
								document.getElementById("r2c1").value = x3;
								document.getElementById("r3c1").value = " ";
							}
						}else if(x1!==0 && x2==0 && x3==0 && x4==0){
								document.getElementById("r1c1").value = x1;
						}else if(x1==0 && x2!==0 && x3==0 && x4==0){
								document.getElementById("r1c1").value = x2;
								document.getElementById("r2c1").value = " ";
						}else if(x1==0 && x2==0 && x3!==0 && x4==0){
