			function leftRandom(){
				var a1=Number(document.getElementById("r1c1").value);
				var a2=Number(document.getElementById("r1c2").value);
				var a3=Number(document.getElementById("r1c3").value);
				var a4=Number(document.getElementById("r1c4").value);
				var a5=Number(document.getElementById("r2c1").value);
				var a6=Number(document.getElementById("r2c2").value);
				var a7=Number(document.getElementById("r2c3").value);
				var a8=Number(document.getElementById("r2c4").value);
				var a9=Number(document.getElementById("r3c1").value);
				var a10=Number(document.getElementById("r3c2").value);
				var a11=Number(document.getElementById("r3c3").value);
				var a12=Number(document.getElementById("r3c4").value);
				var a13=Number(document.getElementById("r4c1").value);
				var a14=Number(document.getElementById("r4c2").value);
				var a15=Number(document.getElementById("r4c3").value);
				var a16=Number(document.getElementById("r4c4").value);
				
				var as=[a1,a2,a3,a4,a5,a6,a7,a8,a9,a10,a11,a12,a13,a14,a15,a16];
				var i;
				
				for(i=0;i<as.length;i++){
					if(as[i]!==0){
					if(i==0 || i==4 || i==8 || i==12){continue;}
						if(as[i-1]==0 || as[i]==as[i-1]){
							firstRow();
							secondRow();
							thirdRow();
							forthRow();
							randomPlace();
							break
						}
					}
				} 
			}
		}
		
		// win or loss function
		function win(){
			var b1 = Number(document.getElementById("r1c1").value);
			var b2 = Number(document.getElementById("r1c2").value);
			var b3 = Number(document.getElementById("r1c3").value);
			var b4 = Number(document.getElementById("r1c4").value);
			var b5 = Number(document.getElementById("r2c1").value);
			var b6 = Number(document.getElementById("r2c2").value);
			var b7 = Number(document.getElementById("r2c3").value);
			var b8 = Number(document.getElementById("r2c4").value);
			var b9 = Number(document.getElementById("r3c1").value);
			var b10 = Number(document.getElementById("r3c2").value);
			var b11 = Number(document.getElementById("r3c3").value);
			var b12 = Number(document.getElementById("r3c4").value);
			var b13 = Number(document.getElementById("r4c1").value);
			var b14 = Number(document.getElementById("r4c2").value);
			var b15 = Number(document.getElementById("r4c3").value);
			var b16 = Number(document.getElementById("r4c4").value);
			var x;
			var arr=[b1,b2,b3,b4,b5,b6,b7,b8,b9,b10,b11,b12,b13,b15,b16];
			for(x=0;x<arr.length;x++){
				if(arr[x]==2048){
					alert("Congratulation!! You win the game.");
				}
			}
			
			if(b1!==0 &&b2!==0 &&b3!==0 &&b4!==0 &&b5!==0 &&b6!==0
			&&b7!==0 &&b8!==0 &&b9!==0 &&b10!==0 &&b11!==0 &&b12!==0
			&&b13!==0 &&b14!==0 &&b15!==0 &&b16!==0){
				
					if(b1!==b2 && b1!==b5 && b2!==b3 && b2!==b6 && b3!==b4 && b3!==b7
				&& b4!==b8 && b5!==b6 && b5!==b9 && b6!==b7 && b6!==b10 && b7!==b8
				&& b7!==b11 && b8!==b12 && b9!==b10 && b9!==b13 && b10!==b11 && b10!==b14
				&& b11!==b12 && b11!==b15 && b12!==b16 && b13!==b14 && b14!==b15 && b15!==b16
				){
					alert("Opps! You loss the game");
				}
			}
		}
		
		
		</script>
