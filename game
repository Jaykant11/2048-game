			// random no. two generated
			function randomFortwo(){
			
					if(x==a){
						document.getElementById("r1c1").value = 2;
					}else if(x==b){
						document.getElementById("r1c2").value = 2;
					}else if(x==c){
						document.getElementById("r1c3").value = 2;
					}else if(x==d){
						document.getElementById("r1c4").value = 2;
					}else if(x==e){
						document.getElementById("r2c1").value = 2;
					}else if(x==f){
						document.getElementById("r2c2").value = 2;
					}else if(x==g){
						document.getElementById("r2c3").value = 2;
					}else if(x==h){
						document.getElementById("r2c4").value = 2;
					}else if(x==i){
						document.getElementById("r3c1").value = 2;
					}else if(x==j){
						document.getElementById("r3c2").value = 2;
					}else if(x==k){
						document.getElementById("r3c3").value = 2;
					}else if(x==l){
						document.getElementById("r3c4").value = 2;
					}else if(x==m){
						document.getElementById("r4c1").value = 2;
					}else if(x==n){
						document.getElementById("r4c2").value = 2;
					}else if(x==o){
						document.getElementById("r4c3").value = 2;
					}else if(x==p){
						document.getElementById("r4c4").value = 2;
					}
			}
			
			// random no. four generated
			function randomForFour(){
			
					if(y==a){
						document.getElementById("r1c1").value = 4;
					}else if(y==b){
						document.getElementById("r1c2").value = 4;
					}else if(y==c){
						document.getElementById("r1c3").value = 4;
					}else if(y==d){
						document.getElementById("r1c4").value = 4;
					}else if(y==e){
						document.getElementById("r2c1").value = 4;
					}else if(y==f){
						document.getElementById("r2c2").value = 4;
					}else if(y==g){
						document.getElementById("r2c3").value = 4;
					}else if(y==h){
						document.getElementById("r2c4").value = 4;
					}else if(y==i){
						document.getElementById("r3c1").value = 4;
					}else if(y==j){
						document.getElementById("r3c2").value = 4;
					}else if(y==k){
						document.getElementById("r3c3").value = 4;
					}else if(y==l){
						document.getElementById("r3c4").value = 4;
					}else if(y==m){
						document.getElementById("r4c1").value = 4;
					}else if(y==n){
						document.getElementById("r4c2").value = 4;
					}else if(y==o){
						document.getElementById("r4c3").value = 4;
					}else if(y==p){
						document.getElementById("r4c4").value = 4;
					}
					
					
					if(x==y){
						document.getElementById("r2c3").value = 2;	
					}
			}
				
		// random place generation
			function randomPlace(){
			debugger
				var z = Math.floor(Math.random() * 16);
				
				if(z==a){
					var a1 = Number(document.getElementById("r1c1").value);
						if(a1==0){
							var dis = (Math.random() <= 0.8) ? 2 : 4;
							document.getElementById("r1c1").value = dis;
						}else{
							randomPlace();
						}
				}else if(z==b){
					var a1 = Number(document.getElementById("r1c2").value);
						if(a1==0){
							var dis = (Math.random() <= 0.8) ? 2 : 4;
							document.getElementById("r1c2").value = dis;
						}else{
							randomPlace();
						}
				}else if(z==c){
