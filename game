			function upRandom(){
				var a1=Number(document.getElementById("r1c1").value);
				var a2=Number(document.getElementById("r1c2").value);
				var a3=Number(document.getElementById("r1c3").value);
				var a4=Number(document.getElementById("r1c4").value);
				var a5=Number(document.getElementById("r2c1").value);
				var a6=Number(document.getElementById("r2c2").value);
				var a7=Number(document.getElementById("r2c3").value);
				var a8=Number(document.getElementById("r2c4").value);
				var a9=Number(document.getElementById("r3c1").value);
				var a10=Number(document.getElementById("r3c2").value);
				var a11=Number(document.getElementById("r3c3").value);
				var a12=Number(document.getElementById("r3c4").value);
				var a13=Number(document.getElementById("r4c1").value);
				var a14=Number(document.getElementById("r4c2").value);
				var a15=Number(document.getElementById("r4c3").value);
				var a16=Number(document.getElementById("r4c4").value);
				
				var as=[a1,a2,a3,a4,a5,a6,a7,a8,a9,a10,a11,a12,a13,a14,a15,a16];
				var i;
				
				for(i=0;i<as.length;i++){
					if(as[i]!==0){
						if(as[i-4]==0 || as[i]==as[i-4]){
							firstColumn();
							secondColumn();
							thirdColumn();
							forthColumn();
							randomPlace();
							break
						}
					}
				} 
			}
			
			
		}
		
		// down Direction
		function downDirection(){
			downRandom();
			
			// first column function 
			function firstColumn(){
			debugger
				var sum;
				var sum1;
					var x4 = Number(document.getElementById("r4c1").value);
					var x3 = Number(document.getElementById("r3c1").value);
					var x2 = Number(document.getElementById("r2c1").value);
					var x1 = Number(document.getElementById("r1c1").value);
					
						if(x1!==0 && x2!==0 && x3!==0 && x4!==0){
							if(x3==x4){
								sum = x3 + x4;
								document.getElementById("r4c1").value = sum;
								document.getElementById("r3c1").value = x2;
								document.getElementById("r2c1").value = x1;
								document.getElementById("r1c1").value = " ";
							}else if(x2==x3){
								sum = x2 + x3;
								document.getElementById("r3c1").value = sum;
								document.getElementById("r2c1").value = x1;
								document.getElementById("r1c1").value = " ";
							}else if(x1==x2){
								sum = x1 + x2;
								document.getElementById("r2c1").value = sum;
								document.getElementById("r1c1").value = " ";
							}else if(x1==x2 && x3==x4){
								sum = x1 + x2;
								sum1 = x3 + x4;
								document.getElementById("r4c1").value = sum1;
								document.getElementById("r3c1").value =  sum;
								document.getElementById("r2c1").value = " ";
								document.getElementById("r1c1").value = " ";
							}
						}else if(x1!==0 && x2!==0 && x3!==0 && x4==0){
							if(x2==x3){
								sum = x2 + x3;
								document.getElementById("r4c1").value =  sum;
								document.getElementById("r3c1").valu2 = x1;
								document.getElementById("r2c1").value =  " ";
